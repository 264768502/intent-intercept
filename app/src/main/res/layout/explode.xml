<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:ignore="NewApi" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/intent_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_edit_label"/>

            <uk.co.ashtonbrsc.intentexplode.widget.BlockEnterEditText
                android:id="@+id/action_edit"
                style="@style/EditTextNoSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/null_text" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_edit_label" />

            <uk.co.ashtonbrsc.intentexplode.widget.BlockEnterEditText
                android:id="@+id/data_edit"
                style="@style/EditTextNoSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/null_text" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type_edit_label"/>

            <uk.co.ashtonbrsc.intentexplode.widget.BlockEnterEditText
                android:id="@+id/type_edit"
                style="@style/EditTextNoSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/null_text" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/uri_edit_label" />

            <uk.co.ashtonbrsc.intentexplode.widget.BlockEnterEditText
                android:id="@+id/uri_edit"
                style="@style/EditTextNoSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/null_text" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                android:id="@+id/categories_header"
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categories_header_label" />

            <LinearLayout
                android:id="@+id/categories_layout"
                style="@style/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/flags_header_label" />

            <LinearLayout
                android:id="@+id/flags_layout"
                style="@style/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/extras_header_label" />

            <LinearLayout
                android:id="@+id/extras_layout"
                style="@style/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <uk.co.ashtonbrsc.intentexplode.widget.UnderlinedTextView
                android:id="@+id/matching_activities_header"
                style="@style/TextHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/matching_activities_header_label" />

            <LinearLayout
                android:id="@+id/activities_layout"
                style="@style/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/text"
                style="@style/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/reset_intent_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onResetIntent"
            android:text="@string/reset_intent_button_label"
            android:visibility="gone" />

        <Button
            android:id="@+id/resend_intent_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onSendIntent"
            android:text="@string/resend_intent_button_label" />
    </LinearLayout>

</LinearLayout>